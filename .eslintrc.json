{
    "env": {
        "angular/angular": true,
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:angular/johnpapa"
    ],
    "plugins": [
        "angular"
    ],
    "rules": {
        "prefer-const": ["error", {
            "destructuring": "all",
            "ignoreReadBeforeAssign": true
        }],
        "prefer-arrow-callback": "error",
        "no-var": "error",
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"]
    }
}